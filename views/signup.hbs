<section class="hero_section signup-hero">
</section>

<section>
    <form action="/register" method="POST" class="form">
        <div class="form-create-account">
            <h3 class="signup-header bold">Create account</h3>
            <div class="form-group">
                <label for="first_name">First Name</label>
                <input type="text" class="form-control" name="first_name">
                <div class="error-container">
                    {{#if error.firstNameError}}
                    <p class="normal">{{error.firstNameError}}</p>
                    {{/if}}
                </div>
            </div>
            <div class="form-group">
                <label for="last_name">Last Name</label>
                <input type="text" class="form-control" name="last_name">
                <div class="error-container">
                    {{#if error.lastNameError}}
                    <p class="normal">{{error.lastNameError}}</p>
                    {{/if}}
                </div>
            </div>
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" class="form-control" name="email">
                <div class="error-container">
                    {{#if error.emailError}}
                    <p class="normal">{{error.emailError}}</p>
                    {{/if}}
                </div>
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" class="form-control" name="password">
                <div class="error-container">
                    {{#if error.passwordError}}
                    <p class="normal">{{error.passwordError}}</p>
                    {{/if}}
                </div>
            </div>
            <div class="form-group">
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" name="checkbox">
                    <label class="form-check-label" for="checkbox">Subscribe to our newsletter?</label>
                </div>
            </div>
            <button type="submit" class="submit-btn">Sign up</button>
        </div>
    </form>
</section>